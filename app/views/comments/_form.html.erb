<div class="well">
<%= form_for @comment, remote: true do |f| %>
    <div class="form-group">
		<%= hidden_field_tag :game_id, @game.id %>
      <%= f.text_field :body, class: 'form-control', required: true, size:50, placeholder:"Enter your message" %>
      <small class="label label-warning">Cannot be blank or contain more than 2000 characters.</small>
    </div>
   <% end %>
</div>