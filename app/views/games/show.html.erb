<p>
  <h2><%= @game.name %></h2>
  
</p>

<p>
  <strong>Turn:</strong>
  <%= @game.turn %>
</p>

<p>
  <strong>It is <%= @game.state %></strong>
</p>
<div class="row">
<div class="three columns">	
	<p>
	<h3>Players:</h3>
	<% for player in @game.players.living %>
		<div class="player inline">
			<% unless player == current_player(@game) %>
		   <div class="medium primary btn">
				<% if !@votee or @votee.id != player.id %>
				<%= link_to "Vote", vote_path(votee_id:player.id), class:"medium primary btn" %>
				<% else %>
				remove vote
				<% end %>
			</div>
			<% end %>
			<%= "* " if player == current_player(@game)%><%= player.alias %> (<%= player.role %>) <br />
		</div>
	<% end %>
	</p>
	<% if @game.players.dead %>
		<p><h4>Dead:</h4>
		<% for player in @game.players.dead %>
			<div class="player inline">
				<%= "* " if player == current_player(@game)%><%= player.alias %> (<%= player.role %>) <br />
			</div>
		<% end %>
	<%end%>
</div>
<div class="five columns">	
	 <div class="panel panel-default" id="comments">
	    <div class="panel-body">
	      <ul class="media-list">
	        <%= render @comments %>
	      </ul>
	    </div>
	  </div>
  	<%= render 'comments/form' %>  
</div>
</div>

<% if (current_user and not @game.started?) %>
	 <%= link_to 'Join Game', join_game_path(:id => @game) %> |
<% end %>

<% if (current_user and current_user == @game.creator and not @game.started?) %>
	  <%= link_to 'Edit', edit_game_path(@game) %> | 
	  <%= link_to 'Start Game', start_game_path(@game) %>
<% end %> |
<%= link_to 'Back', games_path %>
