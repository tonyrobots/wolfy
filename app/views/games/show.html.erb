<p>
  <h2><%= @game.name %></h2>
  
</p>


<p>
  <strong>
	  <% if @game.turn > 0 %>
	  Turn: <%= @game.turn %>.  It is <%= @game.state %>
	  <% else %>
	    Game has not yet started.
	  <% end %>
	</strong>
</p>
<div class="row">
	<div class="six columns">	
		<p>
		<h3>Players:</h3>
		<table class="table">
		<% for player in @game.players.living %>
				<tr><td>			
				<% unless player == current_player(@game) %>
				   <div class="medium primary btn">
						<% if !@votee or @votee.id != player.id %>
						<%= link_to "Vote", vote_path(votee_id:player.id), class:"medium primary btn" %>
						<% else %>
						remove vote
						<% end %>
					</div>
				<% end %>
					<%= " You! " if player == current_player(@game)%>
				</td>
				<td><%= player.alias %> (<%= player.role %>)</td>
			</tr>
		<% end %>
	</table>
		</p>
		<% if @game.players.dead.count > 0 %>
			<p><h4>Dead:</h4>
			<% for player in @game.players.dead %>
				<div class="player inline">
					<%= "* " if player == current_player(@game)%><%= player.alias %> (<%= player.role  %>) <br />
				</div>
			<% end %>
		<%end%>
	</div>
	<div class="six columns">	
		<h3>Chat:</h3>
		 <div class="panel panel-default" id="comments">
			 <%= render 'comments/form' %>  
		    <div class="panel-body scrollable">
		      <ul class="media-list">
		        <%= render @comments %>
		      </ul>
		    </div>
		  </div>
	</div>
</div>

<% if (current_user and not @game.started? and not current_user.is_playing?(@game)) %>
	 <%= link_to 'Join Game', join_game_path(:id => @game) %> |
<% end %>

<% if (current_user and current_user == @game.creator and not @game.started?) %>
	  <%= link_to 'Edit', edit_game_path(@game) %> | 
	  <%= link_to 'Start Game', start_game_path(@game) %>
<% end %> |
<%= link_to 'Back', games_path %>
